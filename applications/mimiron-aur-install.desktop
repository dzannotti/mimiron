[Desktop Entry]
Version=1.0
Type=Application
Name=Install Package (AUR)
Comment=Install a package from Arch User Repository
Icon=system-software-install
Exec=ghostty -e bash -c 'mimiron-show-logo && PKG=$(gum input --placeholder "AUR package name...") && [ -n "$PKG" ] && mimiron-pkg-aur-install "$PKG"; echo; echo "âœ“ Done!"; echo; read -n 1 -s -r -p "Press any key to close..." </dev/tty; echo'
Terminal=false
Categories=System;PackageManager;
Keywords=install;package;aur;yay;mimiron;
