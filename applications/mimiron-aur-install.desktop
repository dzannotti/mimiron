[Desktop Entry]
Version=1.0
Type=Application
Name=Install Package (AUR)
Comment=Install a package from Arch User Repository
Icon=system-software-install
Exec=ghostty -e bash -c 'export PATH="$HOME/.local/share/mimiron/bin:$PATH"; mimiron-show-logo; PKG=$(gum input --placeholder "AUR package name...") && [ -n "$PKG" ] && mimiron-pkg-aur-install "$PKG"; mimiron-show-done'
Terminal=false
Categories=System;PackageManager;
Keywords=install;package;aur;yay;mimiron;
