[Desktop Entry]
Version=1.0
Type=Application
Name=Install Package (pacman)
Comment=Install a package from official repositories
Icon=system-software-install
Exec=ghostty -e bash -c 'mimiron-show-logo && PKG=$(gum input --placeholder "Package name...") && [ -n "$PKG" ] && mimiron-pkg-install "$PKG"; mimiron-show-done'
Terminal=false
Categories=System;PackageManager;
Keywords=install;package;pacman;mimiron;
