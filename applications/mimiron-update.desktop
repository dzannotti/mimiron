[Desktop Entry]
Version=1.0
Type=Application
Name=Update Mimiron
Comment=Pull latest changes and update Mimiron configuration
Icon=gnome-robots
Exec=ghostty --window-width=80 --window-height=40 --title="Mimiron Update" -e bash -c 'export PATH="$HOME/.local/share/mimiron/bin:$PATH"; mimiron-show-logo; mimiron-update; mimiron-show-done'
Terminal=false
Categories=System;Settings;
Keywords=update;mimiron;config;
