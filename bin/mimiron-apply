#!/bin/bash
# Mimiron Apply - Run individual setup components
# Useful for applying specific configs on an existing system

set -euo pipefail

MIMIRON_PATH="${MIMIRON_PATH:-$HOME/.local/share/mimiron}"

show_help() {
    cat << EOF
Usage: mimiron-apply [COMPONENT]

Run individual mimiron setup components.

Available components:
  dns-resolver      Configure systemd-resolved DNS
  firewall          Set up UFW firewall
  gnome-extensions  Install GNOME extensions
  gdm-config        Configure GDM login screen
  gpg-setup         Configure GPG for commit signing
  all               Run all components (same as first-run.sh)

Examples:
  mimiron-apply gpg-setup
  mimiron-apply firewall
  mimiron-apply all

EOF
}

if [ $# -eq 0 ]; then
    show_help
    exit 1
fi

COMPONENT="$1"

case "$COMPONENT" in
    dns-resolver)
        echo "→ Configuring DNS resolver..."
        bash "$MIMIRON_PATH/install/first-run/dns-resolver.sh"
        ;;
    firewall)
        echo "→ Configuring firewall..."
        bash "$MIMIRON_PATH/install/first-run/firewall.sh"
        ;;
    gnome-extensions)
        echo "→ Installing GNOME extensions..."
        bash "$MIMIRON_PATH/install/first-run/gnome-extensions.sh"
        ;;
    gdm-config)
        echo "→ Configuring GDM login screen..."
        bash "$MIMIRON_PATH/install/first-run/gdm-config.sh"
        ;;
    gpg-setup)
        echo "→ Setting up GPG for commit signing..."
        bash "$MIMIRON_PATH/install/first-run/gpg-setup.sh"
        ;;
    all)
        echo "→ Running all setup components..."
        bash "$MIMIRON_PATH/first-run.sh"
        ;;
    -h|--help|help)
        show_help
        ;;
    *)
        echo "Error: Unknown component '$COMPONENT'"
        echo
        show_help
        exit 1
        ;;
esac
