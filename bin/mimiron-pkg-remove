#!/bin/bash

# Interactive package remover for installed packages
# Uses fzf for fuzzy finding with preview of package info

fzf_args=(
  --multi
  --preview 'pacman -Qi {1} 2>/dev/null || echo "Package info not available"'
  --preview-label='alt-p: toggle description, alt-j/k: scroll, tab: multi-select'
  --preview-label-pos='bottom'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
  --color 'pointer:red,marker:red'
  --prompt='Select packages to remove > '
)

# List all explicitly installed packages
pkg_names=$(pacman -Qe | awk '{print $1}' | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
  # Show confirmation
  echo "The following packages will be removed:"
  echo "$pkg_names" | sed 's/^/  - /'
  echo

  if gum confirm "Remove these packages and their dependencies?"; then
    # Convert newline-separated selections to space-separated for pacman
    echo "$pkg_names" | tr '\n' ' ' | xargs sudo pacman -Rns --noconfirm
    echo
    echo "âœ“ Packages removed successfully"
  else
    echo "Removal cancelled"
  fi

  mimiron-show-done
fi
