# GDM dconf settings for Catppuccin Lavender Dark theme
# This file is compiled and placed in /etc/dconf/db/gdm.d/

[org/gnome/desktop/interface]
gtk-theme='Catppuccin-Lavender-Dark'
icon-theme='WhiteSur'
cursor-theme='Bibata-Modern-Ice'
font-name='Ubuntu Sans 11'
monospace-font-name='CaskaydiaMono Nerd Font 10'
color-scheme='prefer-dark'
accent-color='purple'
font-antialiasing='rgba'
font-hinting='slight'

[org/gnome/desktop/wm/preferences]
theme='Catppuccin-Lavender-Dark'

[org/gnome/desktop/background]
picture-uri='file:///usr/share/backgrounds/mimiron/shaded.png'
picture-uri-dark='file:///usr/share/backgrounds/mimiron/shaded.png'
picture-options='zoom'
primary-color='#1e1e2e'
secondary-color='#1e1e2e'

[org/gnome/desktop/screensaver]
picture-uri='file:///usr/share/backgrounds/mimiron/shaded.png'
primary-color='#1e1e2e'
secondary-color='#1e1e2e'

[org/gnome/login-screen]
logo='/usr/share/pixmaps/catppuccin-logo.png'
disable-user-list=false
